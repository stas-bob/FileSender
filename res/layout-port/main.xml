<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/path_text_textView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/paths"
        android:textColor="@color/white"/>"
	<ListView
		android:id="@+id/path_listView"
		android:layout_height="200dp"
		android:layout_gravity="center"
		android:layout_width="fill_parent"/>
	<TextView
	    android:id="@+id/path_emptyView_textView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/red"
        android:text="@string/empty"/>
    <TextView
        android:id="@+id/cur_act_text_textView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/current_activity"
        android:textColor="@color/white"/>"
	<ListView
		android:id="@+id/cur_act_listView"
		android:layout_height="200dp"
		android:layout_width="fill_parent"/>
	<TextView
	    android:id="@+id/cur_act_emptyView_textView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/red"
        android:text="@string/empty"/>
	<TextView
	    android:id="@+id/progress_textView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"/>
	<TextView
	    android:layout_marginTop="10dp"
	    android:id="@+id/timer_textView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="24dp"/>
</LinearLayout>