<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/path_text_textView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/paths"
        android:textColor="@color/white"/>"
	<ListView
		android:id="@+id/path_listView"
		android:layout_height="200dp"
		android:layout_gravity="center"
		android:layout_width="fill_parent"/>
	<TextView
	    android:id="@+id/path_emptyView_textView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/cyan"
        android:text="@string/empty"/>
    <TextView
        android:id="@+id/cur_act_text_textView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/current_activity"
        android:textColor="@color/white"/>"
	<ListView
		android:id="@+id/cur_act_listView"
		android:layout_height="100dp"
		android:layout_width="fill_parent"
		android:divider="@color/transparent"/>
	<TextView
	    android:id="@+id/cur_act_emptyView_textView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/cyan"
        android:text="@string/empty"/>
	<LinearLayout
	    android:layout_marginTop="10dp" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:visibility="gone">
		<ProgressBar
		    android:id="@+id/progress_detail"
		    android:layout_width="0px"
		    android:layout_height="wrap_content"
		    android:max="100"
		    style="@style/HorizontalBar"
		    android:layout_weight=".65"/>
	    <TextView 
	        android:id="@+id/progress_detail_speed_textView"
	        android:layout_width="0px"
	        android:layout_height="wrap_content"
	        android:layout_weight=".35"
	        android:layout_marginLeft="5dp"/>
	</LinearLayout>
	<ProgressBar
	    android:id="@+id/progress_all"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    style="@style/HorizontalBar"
	    android:max="100"
	    android:visibility="gone"/>
	<TextView
	    android:id="@+id/progress_all_textView"
	    android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>
	<Button
	    android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/cancel_button"
        android:text="@string/cancel"/>
	<TextView
	    android:layout_marginTop="10dp"
	    android:id="@+id/timer_textView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="24dp"/>
</LinearLayout>